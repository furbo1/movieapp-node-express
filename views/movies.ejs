<html>
    <head>
        <title>
            Movie App
        </title>
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta1/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-giJF6kkoqNQ00vy+HMDP7azOuL0xtbfIcaT9wjKHr8RbDVddVHyTfAAsrekwKmP1" crossorigin="anonymous">
        <link rel="stylesheet" href="/stylesheets/design.css">

    </head>
    <body>
        <h1 id="src-heading">Search Results ><span style="color:gray"><%= searchQuery.toUpperCase()%></span></h1> 
       <% data["results"].forEach((movie)=>{ %>
            <div class="card mb-5 w-75">
                <div class="row no-gutters">
                    <div class="col-md-4">
                        <img src='https://image.tmdb.org/t/p/w1280/<%=movie["poster_path"]%>' alt="" class="card-img img-fluid">
                    </div>
                    <div class="col-md-8">
                        <div class="card-body">
                            <h2 class="card-title"><%=movie["original_title"]%></h2>
                            <hr>
                            <p class="card-text"><%=movie["overview"]%></p>
                            <hr>
                            <br>
                            <p class="card-text"><b><%=movie["release_date"]%></b></p>
                            <p class="card-text"><b>Total votes:</b> <%=movie["vote_count"]%></p>
                            <p class="card-text"><b>Average Rating:</b> <%=movie["vote_average"]%></p>
                        </div>
                    </div>
                </div>
            </div>


            <%})%>
        
    </body>
</html>